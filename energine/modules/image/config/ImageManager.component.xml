<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <methods>
    	<method name="main">
    	   <javascript>
    	       <object name="ImageManager" />
    	   </javascript>
    		<fields>
    			<field name="filename" type="string" title="FIELD_IMG_FILENAME" length="100" />
    			<field name="width" type="int" title="FIELD_IMG_WIDTH" length="10" nullable="true"/>
    			<field name="height" type="int" title="FIELD_IMG_HEIGHT" length="10" nullable="true"/>
    			<field name="hspace" type="int" title="FIELD_IMG_HSPACE" length="10" nullable="true"/>
    			<field name="vspace" type="int" title="FIELD_IMG_VSPACE" length="10" nullable="true"/>
    			<field name="align" type="select" title="FIELD_IMG_ALIGN" nullable="true"/>
    			<field name="alt" type="string" title="FIELD_IMG_ALTTEXT" length="100" nullable="true"/>
    		</fields>
    		<toolbar>
    			<control type="button" id="insert" title="BTN_INSERT" onclick="insertImage" tooltip="Insert image" />
    			<control type="button" id="imagelib" title="BTN_IMAGELIB" onclick="openImageLib" tooltip="Open image library" />
    			<control type="button" id="close" title="BTN_CLOSE" onclick="close" tooltip="Close this window" />
    		</toolbar>
    	</method>
    </methods>
</configuration>
