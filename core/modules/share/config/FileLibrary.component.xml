<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<uri_patterns>
				<pattern>/</pattern>
				<pattern>/[string]/</pattern>
			</uri_patterns>
			<javascript>
				<object name="FileManager" />
			</javascript>
			<toolbar>
				<control id="open" title="BTN_OPEN" type="button" onclick="open"/>
				<control id="addDir" title="BTN_ADD_DIR" type="button" onclick="addDir"/>
				<control id="add" title="BTN_ADD" type="button" onclick="add"/>
				<control id="delete" title="BTN_DELETE" type="button" onclick="del"/> 
				<control id="rename" title="BTN_RENAME" type="button" onclick="rename"/>
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="addDir">
			<uri_patterns>
				<pattern>/add-dir/</pattern>
			</uri_patterns>
			<javascript>
				<object name="FileForm"/>
			</javascript>
			<fields>
			    <field name="upl_id" />
				<field name="upl_path" message="MSG_BAD_FORMAT" pattern="/^[a-z0-9\-\_]+$/"/>
			    <field name="upl_name" />
			</fields>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="saveDir"/>
				<control id="close" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="add">
			<uri_patterns>
				<pattern>/add/</pattern>
			</uri_patterns>
			<javascript>
				<object name="FileForm"/>
			</javascript>
			<fields>
			    <field name="upl_id" />
			    <field name="upl_name" />
				<field name="upl_path" type="file" title="FIELD_UPL_FILE"/>
			</fields>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
				<control id="close" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="getRawData">
			<uri_patterns>
				<pattern>/get-data/</pattern>
			</uri_patterns>
		</method>
		<method name="saveDir">
			<uri_patterns>
				<pattern>/save-dir/</pattern>
			</uri_patterns>
		</method>
		<method name="delete">
			<uri_patterns>
				<pattern>/delete/</pattern>
			</uri_patterns>
		</method>
		<method name="upload" >
			<uri_patterns>
				<pattern>/upload/</pattern>
			</uri_patterns>
		</method>
		<method name="save">
			<uri_patterns>
				<pattern>/save/</pattern>
			</uri_patterns>
		</method>
		<method name="rename">
			<uri_patterns>
				<pattern>/rename/</pattern>
			</uri_patterns>
		</method>
	</methods>
</configuration>