<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="PageEditor"/>
			</javascript>
	    </method>
		<method name="save" rights="2">
			<uri_patterns>
				<pattern>/save-text/</pattern>
			</uri_patterns>
		</method>
		<method name="cleanup" rights="2">
			<uri_patterns>
				<pattern>/cleanup/</pattern>
			</uri_patterns>
		</method>
        <method name="source" rights="2">
            <uri_patterns>
                <pattern>/source/</pattern>
            </uri_patterns>
        </method>
		<method name="imageManager" rights="2">
			<uri_patterns>
				<pattern>/imagemanager/</pattern>
			</uri_patterns>
		</method>
		<!-- Сквозной метод -->
		<method name="fileLibrary" rights="2">
			<uri_patterns>
				<pattern>/file-library/</pattern>
				<pattern>/file-library/[string]/</pattern>
			</uri_patterns>
		</method>
	</methods>
</configuration>