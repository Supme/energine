<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="ValidForm" />
			</javascript>
			<fields>
				<field name="feed_id"/>
				<field name="feed_email"/>
				<field name="feed_author"/>
				<field name="feed_text"/>
                <field name="captcha" type="captcha" title="TXT_ENTER_CAPTCHA"/>
			</fields>
			<toolbar>
				<control id="send_letter" title="BTN_SEND" type="submit" onclick="send"/>
			</toolbar>
		</method>
		<method name="send">
			<uri_patterns>
				<pattern>/send/</pattern>
			</uri_patterns>
		</method>
        <method name="success">
        <uri_patterns>
            <pattern>/success/</pattern>
        </uri_patterns>
    </method>
	</methods>
</configuration>