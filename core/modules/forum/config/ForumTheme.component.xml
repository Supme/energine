<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
        <method name="save" rights="2">
        	<uri_patterns>
                 <pattern>/[postID]/save-theme/</pattern>
                 <pattern>/save-theme/</pattern>
            </uri_patterns>
        </method>
        <method name="remove" rights="2">
        	<uri_patterns>
                 <pattern>/[postID]/remove/</pattern>
            </uri_patterns>
        </method>
        <method name="cleanup" rights="2">
            <uri_patterns>
                <pattern>/cleanup/</pattern>
            </uri_patterns>
        </method>
        <method name="create" rights="2">
        	<uri_patterns>
                 <pattern>/create/</pattern>
            </uri_patterns>
            <javascript>
            	<object name="ForumForm" />
            </javascript>
            <fields>
                <field name="theme_name"/>
                <field name="theme_text"/>
            </fields>
            <toolbar>
            	<control id="savePost" title="BTN_SAVE" type="submit"  />
            </toolbar>
        </method>
        <method name="modify" rights="2">
        	<uri_patterns>
                 <pattern>/[postID]/modify/</pattern>
            </uri_patterns>
            <javascript>
                <object name="ForumForm" />
            </javascript>
            <fields>
                <field name="theme_id"/>
                <field name="theme_name"/>
                <field name="theme_text"/>
            </fields>
            <toolbar>
            	<control id="savePost" title="BTN_SAVE" type="submit"  />
            </toolbar>
        </method>

        <method name="view">
             <uri_patterns>
                 <pattern>/[themeID]/page-[pageNumber]</pattern>
                 <pattern>/[themeID]/</pattern>
             </uri_patterns>
            <fields>
                <field name="theme_id"/>
                <field name="smap_id"/>
                <field name="u_id"/>
                <field name="theme_name"/>
                <field name="theme_text"/>
                <field name="theme_created" outputFormat="%E"/>
                <field name="theme_closed"/>
            </fields>
            <translations>
                <translation const="FORUM_ANSWERS"/>
                <translation const="FORUM_EDIT_THEME"/>
                <translation const="FORUM_DELETE_THEME"/>
                <translation const="FORUM_CREATE_THEME"/>
                <translation const="TITLE_GENDER"/>
                <translation const="TITLE_PLACE"/>
                <translation const="BTN_CITE"/>
            </translations>
        </method>
        <method name="main">
            <uri_patterns>
                <!--<pattern>/page-[pageNumber]/</pattern>-->
                <pattern>/</pattern>
            </uri_patterns>
            <fields>
                <field name="theme_id"/>
                <field name="smap_id"/>
                <field name="u_id"/>
                <field name="theme_name"/>
                <field name="theme_created" outputFormat="%E"/>
                <field name="theme_closed"/>
			</fields>
            <toolbar>
                <control id="view" title="BTN_GO" type="link"/>
            </toolbar>
            <translations>
                <translation const="FORUM_CREATED"/>
                <translation const="FORUM_LAST_POST"/>
                <translation const="FORUM_CREATE_THEME"/>
                <translation const="FORUM_SUBCATEGORY"/>
            </translations>
        </method>
    </methods>
</configuration>