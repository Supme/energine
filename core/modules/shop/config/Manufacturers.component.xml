<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="GridManager" />
			</javascript>
			<fields>
				<field name="producer_id"/>
				<field name="producer_name"/>
			</fields>
			<toolbar>
				<control id="add" title="BTN_ADD" type="button" onclick="add"/>
				<control id="edit" title="BTN_EDIT" type="button" onclick="edit"/>
				<control id="delete" title="BTN_DELETE" type="button" onclick="del"/>
			</toolbar>
		</method>
		<method name="add">
		     <uri_patterns>
		         <pattern>/add/</pattern>
		     </uri_patterns>
			<javascript>
				<object name="Form"/>
			</javascript>
			<fields>
				<field name="producer_id"/>
				<field name="producer_name"/>
				<field name="producer_segment"  pattern="/^[a-z0-9\-\_]+$/" message="TXT_BAD_SEGMENT_FORMAT" />
			</fields>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="edit">
		     <uri_patterns>
		         <pattern>/[int]/edit/</pattern>
		     </uri_patterns>
			<javascript>
				<object name="Form"/>
			</javascript>
			<fields>
				<field name="producer_id"/>
				<field name="producer_name"/>
				<field name="producer_segment"  pattern="/^[a-z0-9\-\_]+$/" message="TXT_BAD_SEGMENT_FORMAT" />
			</fields>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="save" rights="2">
		     <uri_patterns>
		         <pattern>/save/</pattern>
		     </uri_patterns>
		</method>
		<method name="delete"  rights="2">
		     <uri_patterns>
		         <pattern>/[int]/delete/</pattern>
		     </uri_patterns>
		</method>
		<method name="getRawData"  rights="2">
			<uri_patterns>
		         <pattern>/get-data/</pattern>
					<pattern>/get-data/page-[int]/</pattern>
		     </uri_patterns>
		</method>
	</methods>
</configuration>