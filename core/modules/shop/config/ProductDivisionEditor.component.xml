<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
	       <method name="main">
            <fields>
                <field name="smap_id"/>
                <field name="smap_pid"/>
                <field name="lang_id"/>
                <field name="smap_name"/>
                <field name="tmpl_icon"/>
                <field name="smap_is_final"/>
                <field name="smap_is_system"/>
                <field name="smap_default"/>                
            </fields>
        </method>
		<method name="selector">
			<uri_patterns>
				<pattern>/list/</pattern>
				<pattern>/list/[int]/</pattern>
			</uri_patterns>
			<javascript>
				<object name="DivManager"/>
			</javascript>
			<toolbar>
				<control id="select" title="BTN_SELECT" type="button" onclick="select"/>
				<control id="sep01" type="separator"/>
				<control id="add" title="BTN_ADD" type="button" onclick="add"/>
				<control id="edit" title="BTN_EDIT" type="button" onclick="edit"/>
				<control id="sep02" type="separator"/>
				<control id="edit" title="BTN_DELETE" type="button" onclick="del"/>
                <control id="sep03" type="separator"/>
				<control id="close" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="getRawData">
			<uri_patterns>
				<pattern>/get-data/</pattern>
				<pattern>/get-data/[string]/</pattern>
		     </uri_patterns>
		</method>
		<method name="getProperties">
			<uri_patterns>
				<pattern>/get-node-data/</pattern>
			</uri_patterns>
		</method>
		<method name="add" rights="3">
		    <uri_patterns>
		        <pattern>/add/</pattern>
				<pattern>/add/[int]/</pattern>
		    </uri_patterns>
			<fields>
				<field name="smap_id"/>
				<field name="smap_pid"/>
				<field name="lang_id"/>
				<field name="smap_segment" pattern="/^[a-z0-9\-]+$/" message="TXT_BAD_SEGMENT_FORMAT" />
				<field name="tmpl_id"/>
				<field name="smap_default"/>
				<field name="smap_is_final"/>
				<!--pattern="/^(([\w]+:)?\/\/)?(([\d\w]|%[a-fA-f\d]{2,2})+(:([\d\w]|%[a-fA-f\d]{2,2})+)?@)?([\d\w][-\d\w]{0,253}[\d\w]\.)+[\w]{2,4}(:[\d]+)?(\/([-+_~.\d\w]|%[a-fA-f\d]{2,2})*)*(\?(&amp;?([-+_~.\d\w]|%[a-fA-f\d]{2,2})=?)*)?(#([-+_~.\d\w]|%[a-fA-f\d]{2,2})*)?$/" message="ERR_BAD_URL"-->
				<field name="smap_redirect_url"/>
				<field name="smap_is_disabled"/>
                <field name="page_rights" type="custom" tabName="TAB_PAGE_RIGHTS"/>				
				<field name="smap_name"/>
				<field name="smap_description_rtf"/>
				<field name="smap_html_title"/>
				<field name="smap_meta_keywords"/>
				<field name="smap_meta_description"/>
			</fields>
			<javascript>
				<object name="DivForm"/>
			</javascript>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
                <control id="after_save_action" title="TXT_AFTER_SAVE_ACTION" type="select">
                    <options>
                        <option id="close">BTN_CLOSE</option>
                        <option id="go">BTN_GO</option>
                    </options>
                </control>
                <control id="sep1" type="separator" />
				<control id="list" title="BTN_CANCEL" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="edit" rights="3">
		    <uri_patterns>
		        <pattern>/[int]/edit/</pattern>
		    </uri_patterns>
			<fields>
				<field name="smap_id"/>
				<field name="smap_pid"/>
				<field name="lang_id"/>
				<field name="smap_segment" pattern="/^[a-z0-9\-]+$/" message="TXT_BAD_SEGMENT_FORMAT"/>
				<field name="tmpl_id"/>
				<field name="smap_default"/>
				<field name="smap_is_final"/>
				<!--pattern="/^(([\w]+:)?\/\/)?(([\d\w]|%[a-fA-f\d]{2,2})+(:([\d\w]|%[a-fA-f\d]{2,2})+)?@)?([\d\w][-\d\w]{0,253}[\d\w]\.)+[\w]{2,4}(:[\d]+)?(\/([-+_~.\d\w]|%[a-fA-f\d]{2,2})*)*(\?(&amp;?([-+_~.\d\w]|%[a-fA-f\d]{2,2})=?)*)?(#([-+_~.\d\w]|%[a-fA-f\d]{2,2})*)?$/" message="ERR_BAD_URL"-->
				<field name="smap_redirect_url" />
				<field name="smap_is_disabled"/>
                <field name="page_rights" type="custom" tabName="TAB_PAGE_RIGHTS"/>             				
				<field name="smap_name"/>
				<field name="smap_description_rtf"/>
				<field name="smap_html_title"/>
				<field name="smap_meta_keywords"/>
				<field name="smap_meta_description"/>
			</fields>
			<javascript>
				<object name="DivForm"/>
			</javascript>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="save" rights="3">
		    <uri_patterns>
		        <pattern>/save/</pattern>
		    </uri_patterns>
		</method>
		<method name="upload">
		     <uri_patterns>
		         <pattern>/upload/</pattern>
		     </uri_patterns>
		</method>
		<method name="delete">
		     <uri_patterns>
		         <pattern>/[int]/delete/</pattern>
		     </uri_patterns>
		</method>
		<method name="up">
			<uri_patterns>
				<pattern>/[int]/up/</pattern>
			</uri_patterns>
		</method>
		<method name="down">
			<uri_patterns>
				<pattern>/[int]/down/</pattern>
			</uri_patterns>
		</method>
		<method name="imageManager" rights="3">
			<uri_patterns>
				<pattern>/imagemanager/</pattern>
			</uri_patterns>
		</method>
		<method name="fileLibrary" rights="3">
			<uri_patterns>
				<pattern>/file-library/</pattern>
				<pattern>/file-library/[any]/</pattern>
			</uri_patterns>
		</method>
		<method name="cleanup" rights="3">
			<uri_patterns>
				<pattern>/cleanup/</pattern>
			</uri_patterns>
		</method>
	</methods>
</configuration>