<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<uri_patterns>
				<pattern>/</pattern>
				<pattern>/page-[pageNumber]/</pattern>
			</uri_patterns>
			<javascript>
				<object name="Product"/>
			</javascript>
			<fields>
				<field name="product_id"/>
				<field name="lang_id"/>
				<field name="product_name"/>
				<field name="product_short_description_rtf"/>
				<field name="smap_id" type="string"/>
				<field name="ps_id"/>
				<field name="product_segment"/>
				<field name="producer_id"/>
				<field name="product_price" type="float" title="TXT_PRODUCT_PRICE"/>
			</fields>
			<toolbar>
				<control id="go" title="BTN_GO" type="button" click="showProduct"/>
				<control id="basket" title="BTN_ADD_TO_BASKET" type="button" click="addToBasket"/>
			</toolbar>
            <translations>
                <translation const="TXT_NO_PRODUCTS"/>
                <translation const="TXT_NO_PRODUCTS_FOUND"/>
            </translations>
		</method>
    	<method name="showManufacturerProducts">
			<uri_patterns>
				<pattern>/manufacturer-[string]/</pattern>
				<pattern>/manufacturer-[string]/page-[pageNumber]/</pattern>
			</uri_patterns>
			<javascript>
				<object name="Product" />
			</javascript>
			<fields>
				<field name="product_id"/>
				<field name="lang_id"/>
				<field name="product_name"/>
				<field name="product_short_description_rtf"/>
				<field name="smap_id" type="string"/>
				<field name="ps_id"/>
				<field name="product_segment"/>
				<field name="producer_id" />
				<field name="product_price" type="float" title="TXT_PRODUCT_PRICE"/>
			</fields>
			<toolbar>
				<control id="go" title="BTN_GO" type="button"/>
				<control id="basket" title="BTN_ADD_TO_BASKET" type="button" click="addToBasket"/>
			</toolbar>
            <translations>
                <translation const="TXT_NO_PRODUCTS"/>
                <translation const="TXT_NO_PRODUCTS_FOUND"/>
            </translations>
		</method>
		<method name="search">
			<uri_patterns>
				<pattern>/search-results/</pattern>
				<pattern>/search-results/page-[pageNumber]/</pattern>
			</uri_patterns>
			<javascript>
				<object name="Product" />
			</javascript>
			<fields>
				<field name="product_id"/>
				<field name="lang_id"/>
				<field name="product_name"/>
				<field name="product_short_description_rtf"/>
				<field name="smap_id" type="string"/>
				<field name="ps_id"/>
				<field name="product_segment"/>
				<field name="producer_id"/>
				<field name="product_price" type="float" title="TXT_PRODUCT_PRICE"/>
			</fields>
			<toolbar>
				<control id="go" title="BTN_GO" type="button" click="showProduct"/>
				<control id="basket" title="BTN_ADD_TO_BASKET" type="button" click="addToBasket"/>
			</toolbar>
            <translations>
                <translation const="TXT_NO_PRODUCTS"/>
                <translation const="TXT_NO_PRODUCTS_FOUND"/>
            </translations>
		</method>
		      <method name="view">
            <uri_patterns>
                <pattern>/[string]/</pattern>
            </uri_patterns>
            <javascript>
                <object name="Product" />
            </javascript>
            <fields>
                <field name="product_id"/>
                <field name="lang_id"/>
                <field name="product_name"/>
                <field name="product_description_rtf"/>
                <field name="smap_id" type="string"/>
                <field name="ps_id"/>
                <field name="producer_id" />
                <field name="product_price" type="float" title="TXT_PRODUCT_PRICE"/>
            </fields>
            <toolbar>
                <control id="basket" title="BTN_ADD_TO_BASKET" type="button" click="addToBasket"/>
            </toolbar>
        </method>
		
	</methods>
</configuration>