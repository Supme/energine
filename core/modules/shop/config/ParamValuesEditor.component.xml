<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="GridManager" />
			</javascript>
			<fields>
				<field name="ppv_id"/>
				<field name="pp_name" title="FIELD_PP_NAME"/>
				<field name="ppv_value"/>
			</fields>
			<toolbar>
				<control id="edit" title="BTN_EDIT" type="button" onclick="edit"/>
				<control id="close" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="edit">
		     <uri_patterns>
		         <pattern>/[int]/edit/</pattern>
		     </uri_patterns>
			<javascript>
				<object name="Form"/>
			</javascript>
			<fields>
				<field name="ppv_id"/>
				<field name="lang_id"/>
				<field name="product_id" mode="1"/>
				<field name="pp_id" mode="1"/>
				<field name="ppv_value"/>
			</fields>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="save">
		     <uri_patterns>
		         <pattern>/save/</pattern>
		     </uri_patterns>
		</method>
		<method name="getRawData">
			<uri_patterns>
                <pattern>/get-data/</pattern>
                <pattern>/get-data/page-[pageNumber]/</pattern>
                <pattern>/get-data/[sortField]-[sortDir]/</pattern>
                <pattern>/get-data/[sortField]-[sortDir]/page-[pageNumber]/</pattern>
		     </uri_patterns>
		</method>
	</methods>
</configuration>