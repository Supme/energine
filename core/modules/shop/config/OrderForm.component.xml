<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="OrderForm" />
			</javascript>
			
			<toolbar>
				<control id="order" title="BTN_SEND" type="submit"/>
			</toolbar>
			<translations>
				<translation const="TXT_REQUIRED_FIELDS"/>
                <translation const="TXT_ENTER_CAPTCHA"/>
			</translations>
		</method>
	    <method name="checkLogin">
	      <uri_patterns>
	           <pattern>/check/</pattern>
	       </uri_patterns>
	    </method>		
		<method name="save">
			<uri_patterns>
				<pattern>/save-order/</pattern>
			</uri_patterns>
			<javascript>
				<object name="OrderForm" />
			</javascript>
			<fields>
				<field name="order_id"/>
				<field name="u_name" mode="2"/>
			</fields>
			<toolbar>
				<control id="send" title="BTN_SEND" type="submit" click="validate"/>
			</toolbar>
		</method>
		<method name="success">
			<uri_patterns>
				<pattern>/success/</pattern>
			</uri_patterns>
		</method>
	</methods>
</configuration>