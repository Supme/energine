<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="GridManager" />
			</javascript>
			<fields>
				<field name="order_id"/>
				<field name="order_created" type="datetime"/>
				<field name="os_id"/>
				<field name="u_id"/>
			</fields>
			<toolbar>
				<control id="edit" title="BTN_VIEW" type="button" onclick="edit"/>
			</toolbar>
		</method>
		<method name="edit">
		     <uri_patterns>
		         <pattern>/[int]/edit/</pattern>
		     </uri_patterns>
			<javascript>
				<object name="OrderHistoryForm"/>
			</javascript>
			<fields>
				<field name="order_id"/>
				<field name="order_created" mode="1"/>
				<field name="os_id"/>
				<field name="order_comment"/>
				<field name="order_details" tabName="TAB_ORDER_DETAILS" type="custom"/>
			</fields>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
				<control id="sep1" type="separator" />
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="order_details">
		  <fields>
		      <field name="product_code" title="FIELD_PRODUCT_CODE"/>
		      <field name="product_name" title="FIELD_PRODUCT_NAME"/>
              <field name="product_price" title="FIELD_PRODUCT_PRICE"/>
		      <field name="basket_count" title="FIELD_BASKET_COUNT"/>
		      <field name="product_summ" title="FIELD_PRODUCT_SUMM"/>
		  </fields>
		</method>
		<method name="save" rights="2">
		     <uri_patterns>
		         <pattern>/save/</pattern>
		     </uri_patterns>
		</method>
		<method name="getRawData"  rights="2">
			<uri_patterns>
                <pattern>/get-data/</pattern>
                <pattern>/get-data/page-[pageNumber]/</pattern>
                <pattern>/get-data/[sortField]-[sortDir]/</pattern>
                <pattern>/get-data/[sortField]-[sortDir]/page-[pageNumber]/</pattern>
		     </uri_patterns>
		</method>
	</methods>
</configuration>