<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="GridManager" />
			</javascript>
			<fields>
				<field name="order_id"/>
				<field name="order_created" type="datetime"/>
				<field name="os_id"/>
				<field name="u_id"/>
			</fields>
			<toolbar>
				<control id="edit" title="BTN_VIEW" type="button" onclick="edit"/>
			</toolbar>
		</method>
		<method name="edit">
		     <uri_patterns>
		         <pattern>/[int]/edit/</pattern>
		     </uri_patterns>
			<javascript>
				<object name="OrderHistoryForm"/>
			</javascript>
			<fields>
				<field name="order_id"/>
				<field name="order_created" mode="1"/>
				<field name="os_id"/>
				<field name="order_comment"/>
			</fields>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
				<control id="viewDetails" title="BTN_VIEW_DETAILS" type="button" onclick="viewDetails"/>
				<control id="sep1" type="separator" />
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="showDetails" rights="2">
			<uri_patterns>
				<pattern>/[int]/show-details/</pattern>
				<pattern>/[int]/show-details/[int]/</pattern>
				<pattern>/[int]/show-details/get-data/</pattern>
				<pattern>/[int]/show-details/get-data/page-[int]/</pattern>
			</uri_patterns>
		</method>
		<method name="save" rights="2">
		     <uri_patterns>
		         <pattern>/save/</pattern>
		     </uri_patterns>
		</method>
		<method name="getRawData"  rights="2">
			<uri_patterns>
		         <pattern>/get-data/</pattern>
				 <pattern>/get-data/page-[int]/</pattern>
		     </uri_patterns>
		</method>
	</methods>
</configuration>