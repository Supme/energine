<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="GridManager" />
			</javascript>
			<fields>
				<field name="pp_id"/>
				<field name="pp_name"/>
				<field name="pp_type"/>
			</fields>
			<toolbar>
				<control id="add" title="BTN_ADD" type="button" onclick="add"/>
				<control id="edit" title="BTN_EDIT" type="button" onclick="edit"/>
				<control id="delete" title="BTN_DELETE" type="button" onclick="del"/>
				<control id="close" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="add">
		     <uri_patterns>
		         <pattern>/add/</pattern>
		     </uri_patterns>
			<javascript>
				<object name="Form"/>
			</javascript>
			<fields>
				<field name="pp_id"/>
				<field name="lang_id"/>
				<field name="pp_type" />
				<field name="pp_name"/>
				<field name="pt_id"/>
			</fields>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
                <control id="after_save_action" title="TXT_AFTER_SAVE_ACTION" type="select">
                    <options>
                        <option id="close">BTN_CLOSE</option>
                        <option id="add">BTN_ADD</option>
                    </options>
                </control>
                <control id="sep1" type="separator" />
				<control id="list" title="BTN_CANCEL" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="edit">
		     <uri_patterns>
		         <pattern>/[int]/edit/</pattern>
		     </uri_patterns>
			<javascript>
				<object name="Form"/>
			</javascript>
			<fields>
				<field name="pp_id"/>
				<field name="lang_id"/>
				<field name="pp_type" />
				<field name="pp_name"/>
				<field name="pt_id"/>
			</fields>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="save">
		     <uri_patterns>
		         <pattern>/save/</pattern>
		     </uri_patterns>
		</method>
		<method name="delete">
		     <uri_patterns>
		         <pattern>/[int]/delete/</pattern>
		     </uri_patterns>
		</method>
		<method name="getRawData">
			<uri_patterns>
		         <pattern>/get-data/</pattern>
				 <pattern>/get-data/page-[int]/</pattern>
		     </uri_patterns>
		</method>
	</methods>
</configuration>