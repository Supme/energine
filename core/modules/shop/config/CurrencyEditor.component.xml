<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="GridManager" />
			</javascript>
			<fields>
				<field name="curr_id"/>
                <field name="curr_is_main"/>
				<field name="curr_name"/>
                <field name="curr_abbr"/>				
				<field name="curr_rate"/>
			</fields>
			<toolbar>
				<control id="add" title="BTN_ADD" type="button" onclick="add"/>
				<control id="edit" title="BTN_EDIT" type="button" onclick="edit"/>
				<control id="delete" title="BTN_DELETE" type="button" onclick="del"/>
				<control id="sepo01" type="separator"/>
                <control id="up" title="BTN_UP" type="button" onclick="up"/>
                <control id="down" title="BTN_DOWN" type="button" onclick="down"/>
			</toolbar>
		</method>
		<method name="add">
		     <uri_patterns>
		         <pattern>/add/</pattern>
		     </uri_patterns>
			<javascript>
				<object name="Form"/>
			</javascript>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="edit">
		     <uri_patterns>
		         <pattern>/[int]/edit/</pattern>
		     </uri_patterns>
			<javascript>
				<object name="Form"/>
			</javascript>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="save" rights="3">
		     <uri_patterns>
		         <pattern>/save/</pattern>
		     </uri_patterns>
		</method>
		<method name="delete"  rights="3">
		     <uri_patterns>
		         <pattern>/[int]/delete/</pattern>
		     </uri_patterns>
		</method>
		<method name="getRawData"  rights="3">
			<uri_patterns>
		         <pattern>/get-data/</pattern>
                 <pattern>/get-data/page-[pageNumber]/</pattern>
                 <pattern>/get-data/[sortField]-[sortDir]/</pattern>
                <pattern>/get-data/[sortField]-[sortDir]/page-[pageNumber]/</pattern>
		     </uri_patterns>
		</method>
        <method name="up" rights="3">
            <uri_patterns>
                <pattern>/[int]/up/</pattern>
            </uri_patterns>
        </method>
        <method name="down" rights="3">
            <uri_patterns>
                <pattern>/[int]/down/</pattern>
            </uri_patterns>
        </method>		
	</methods>
</configuration>