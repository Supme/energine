<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="GridManager" />
			</javascript>
			<fields>
				<field name="basket_id"/>
				<field name="product_name" title="FIELD_PRODUCT_NAME"/>
				<field name="product_code" title="FIELD_PRODUCT_CODE"/>
				<field name="product_price" title="FIELD_PRODUCT_PRICE"/>
				<field name="basket_count"/>
			</fields>
			<toolbar>
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="getRawData"  rights="2">
			<uri_patterns>
		         <pattern>/get-data/</pattern>
				 <pattern>/get-data/page-[int]/</pattern>
		     </uri_patterns>
		</method>
	</methods>
</configuration>
