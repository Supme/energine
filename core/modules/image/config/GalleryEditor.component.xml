<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="FeedToolbar" />
			</javascript>
			<toolbar>
				<control id="add" title="BTN_ADD_PHOTO" type="button" onclick="add"/>
				<control id="edit" title="BTN_EDIT_PHOTO" type="button" onclick="edit"/>
				<control id="delete" title="BTN_DELETE_PHOTO" type="button" onclick="del"/>
			</toolbar>
		</method>
		<method name="add">
		     <uri_patterns>
		         <pattern>/add/</pattern>
		     </uri_patterns>
			<javascript>
				<object name="Form"/>
			</javascript>
            <fields>
                <field name="pg_id"/>
                <field name="smap_id"/>
                <field name="lang_id"/>
                <field name="pg_photo_img"/>
                <field name="pg_title"/>
                <field name="pg_text"/>
            </fields>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
				<control id="after_save_action" title="TXT_AFTER_SAVE_ACTION" type="select">
                    <options>
                        <option id="close">BTN_CLOSE</option>
                        <option id="add">BTN_ADD</option>
                    </options>
                </control>
                <control id="sep1" type="separator" />
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="edit">
		     <uri_patterns>
		         <pattern>/[int]/edit/</pattern>
		     </uri_patterns>
			<javascript>
				<object name="Form"/>
			</javascript>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save"/>
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="save" rights="3">
		     <uri_patterns>
		         <pattern>/save/</pattern>
		     </uri_patterns>
		</method>
		<method name="upload"  rights="2">
		     <uri_patterns>
		         <pattern>/upload/</pattern>
		     </uri_patterns>
		</method>
		<method name="delete"  rights="2">
		     <uri_patterns>
		         <pattern>/[int]/delete/</pattern>
		     </uri_patterns>
		</method>
		<method name="getRawData"  rights="2">
			<uri_patterns>
		         <pattern>/get-data/</pattern>
					<pattern>/get-data/page-[int]/</pattern>
		     </uri_patterns>
		</method>
		<method name="imageManager" rights="3">
			<uri_patterns>
				<pattern>/imagemanager/</pattern>
			</uri_patterns>
		</method>
		<method name="fileLibrary" rights="3">
			<uri_patterns>
				<pattern>/file-library/</pattern>
				<pattern>/file-library/[string]/</pattern>
			</uri_patterns>
		</method>
		<method name="cleanup" rights="3">
			<uri_patterns>
				<pattern>/cleanup/</pattern>
			</uri_patterns>
		</method>
	</methods>
</configuration>