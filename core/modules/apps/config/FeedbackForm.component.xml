<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="ValidForm" />
			</javascript>
			<fields>
				<field name="feed_id"/>
				<field name="feed_email"/>
				<field name="feed_author"/>
				<field name="feed_text"/>
			</fields>
			<toolbar>
				<control id="send_letter" title="BTN_SEND" type="submit" onclick="send"/>
			</toolbar>
			<translations>
				<translation const="TXT_REQUIRED_FIELDS" />
			</translations>
		</method>
		<method name="send">
			<uri_patterns>
				<pattern>/send/</pattern>
			</uri_patterns>
			<fields>
				<field name="result" mode="1"/>
			</fields>
		</method>
	</methods>
</configuration>