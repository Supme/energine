<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<uri_patterns>
				<pattern>/page-[pageNumber]/</pattern>
				<pattern>/</pattern>
		     </uri_patterns>
			<fields>
				<field name="news_id"/>
				<field name="smap_id"/>
				<field name="news_date" outputFormat="%d/%m/%Y"/>
				<field name="news_title"/>
				<field name="news_announce_rtf"/>
				<field name="news_text_rtf" type="boolean"/>
			</fields>
			<toolbar>
				<control id="view" title="TXT_READ_MORE" type="link"/>
			</toolbar>
		</method>
		<method name="view">
		     <uri_patterns>
		         <pattern>/[day]-[month]-[year]/</pattern>
		     </uri_patterns>
 			<fields>
				<field name="news_id"/>
				<field name="smap_id"/>
				<field name="news_date" outputFormat="%d/%m/%Y"/>
				<field name="news_title"/>
				<field name="news_text_rtf"/>
			</fields>
		</method>
	</methods>
</configuration>