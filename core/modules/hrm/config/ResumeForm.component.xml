<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="ResumeForm"/>
			</javascript>
            <fields>
                <field name="resume_id"/>
                <field name="vacancy_id"/>
                <field name="resume_candidate_name"/>
                <field name="resume_candidate_email"/>
                <field name="resume_text"/>
                <field name="resume_main_pfile"/>
                <field name="captcha" type="captcha" title="TXT_ENTER_CAPTCHA"/>
            </fields>
			<uri_patterns>
				<pattern>/</pattern>
		     </uri_patterns>
			<toolbar>
				<control id="send_resume" title="BTN_SEND" type="submit"/>
			</toolbar>
            <translations>
                <translation const="TXT_ENTER_CAPTCHA"/>
            </translations>
		</method>
		<method name="success">
        <uri_patterns>
            <pattern>/success/</pattern>
        </uri_patterns>
        </method>
		<method name="send">
		     <uri_patterns>
		         <pattern>/send-resume/</pattern>
		     </uri_patterns>
			<fields>
				<field name="result"/>
			</fields>
		</method>
	</methods>
</configuration>