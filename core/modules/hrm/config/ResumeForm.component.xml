<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="ResumeForm"/>
			</javascript>
			<uri_patterns>
				<pattern>/</pattern>
		     </uri_patterns>
			<toolbar>
				<control id="send_resume" title="BTN_SEND" type="submit"/>
			</toolbar>
            <translations>
                <translation const="TXT_ENTER_CAPTCHA"/>
            </translations>
		</method>
		<method name="checkCaptcha">
		  <uri_patterns>
		      <pattern>/check-captcha/</pattern>
		  </uri_patterns>
		</method>
		
		<method name="send">
		     <uri_patterns>
		         <pattern>/send-resume/</pattern>
		     </uri_patterns>
			<fields>
				<field name="result"/>
			</fields>
		</method>
	</methods>
</configuration>