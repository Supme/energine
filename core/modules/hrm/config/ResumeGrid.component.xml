<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="ResumeGridManager" />
			</javascript>
			<fields>
				 <field name="resume_id"></field>
				 <field name="vacancy_id"></field>
				 <field name="resume_date"></field>
	             <field name="resume_candidate_name"></field>			 
				 <field name="resume_candidate_email"></field>
			</fields>
			<toolbar>
 				<control id="view" title="BTN_VIEW" type="button" onclick="view"/>
				<control id="delete" title="BTN_DELETE" type="button" onclick="del"/>
				<!-- <control type="button" id="up" title="BTN_MOVE_UP" onclick="up" />
				<control type="button" id="down" title="BTN_MOVE_DOWN" onclick="down" />
				<control id="print" title="BTN_PRINT" type="button" onclick="print"/>
				-->
			</toolbar>
		</method>
		<method name="view">
		     <uri_patterns>
		         <pattern>/[int]/</pattern>
		     </uri_patterns>
			<javascript>
				<object name="Form"/>
			</javascript>
			<toolbar>
				<control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
			</toolbar>
		</method>
		<method name="delete"  rights="2">
		     <uri_patterns>
		         <pattern>/[int]/delete/</pattern>
		     </uri_patterns>
		</method>
		<method name="getRawData"  rights="2">
			<uri_patterns>
		         <pattern>/get-data/</pattern>
					<pattern>/get-data/page-[int]/</pattern>
		     </uri_patterns>
		</method>
		<method name="formatDate" rights="3">
			<uri_patterns>
				<pattern>/format-date/</pattern>
			</uri_patterns>
		</method>
<!--
		<method name="printData">
			<uri_patterns>
				<pattern>/print/</pattern>
			</uri_patterns>
		</method>

-->
	</methods>
</configuration>