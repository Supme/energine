<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<uri_patterns>
				<pattern>/page-[pageNumber]/</pattern>
				<pattern>/</pattern>
		     </uri_patterns>
			<fields>
				<field name="staff_id"/>
				<field name="smap_id"/>
				<field name="staff_photo_prfile"/>
				<field name="staff_name"/>
				<field name="staff_post"/>
				<field name="staff_announce"/>
                <field name="staff_text_rtf" type="boolean"/>
			</fields>
		</method>
		<method name="view">
		     <uri_patterns>
		         <pattern>/[int]/</pattern>
		     </uri_patterns>
            <fields>
                <field name="staff_id"/>
                <field name="smap_id"/>
                <field name="staff_photo_img"/>
                <field name="staff_name"/>
                <field name="staff_post"/>
                <field name="staff_text_rtf"/>
            </fields>
            <translations>
                <translation const="TXT_BACK_TO_LIST"/>
            </translations>
		</method>
	</methods>
</configuration>
