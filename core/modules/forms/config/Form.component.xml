<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <state name="main">
        <uri_patterns>
            <pattern>/</pattern>
        </uri_patterns>
        <toolbar>
            <control id="sendForm" title="BTN_SEND" type="submit" />
        </toolbar>
        <javascript>
            <behavior name="FormBehavior"/>
        </javascript>
        <translations>
            <translation const="TXT_REQUIRED_FIELDS"/>
        </translations>
    </state>
    <state name="send">
        <uri_patterns>
            <pattern>/send/</pattern>
        </uri_patterns>
    </state>
    <state name="success">
        <uri_patterns>
            <pattern>/success/</pattern>
        </uri_patterns>
    </state>
